CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic
COMPILE = $(CC) $(CFLAGS)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(COMPILE) $(OBJ) -o $@

clean:
	-$(RM) *~ $(NAME) clean

oclean:
	-$(RM) $(OBJ) oclean

fclean: clean oclean
	-$(RM) fclean

re: fclean all

# Ensure that the Makefile does not compile if m.h is missing
ifeq (,$(wildcard m.h))
$(error "m.h not found!")
endif

